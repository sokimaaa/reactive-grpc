<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} %5p --- %-40.40logger{39} : %m%n
            </pattern>
        </encoder>
    </appender>

    <logger name="com.sokima.reactive.grpc.bookstore" level="TRACE"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>